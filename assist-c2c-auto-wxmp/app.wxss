/**app.wxss**/
.container {
  height: 100%;
  padding: 5px 2%;
  box-sizing: border-box;
} 
.auth-pop{
  padding: 10px 4%;
  position: relative;
}
.auth-pop .auth-head{
  padding: 5px 0;
  font-size: 14px;
}
.auth-pop .auth-bold{
  font-size: 16px;
  padding: 10px 0;
}
.auth-pop .auth-btns{
  text-align: center;
  margin-top: 10%;
}
.auth-btns van-button{
  margin: 0 5%;
}
.auth-btn{
  padding: 0 30px !important;
  font-weight: bold;
}
.add-button{
  width: 60px;
  height: 60px;
  border-radius: 30px;
  position: fixed;
  right: 4%;
  bottom: 50px;
  background-color: #88c9a0;
  color: #fff;
  font-size: smaller;
  text-align: center;
  box-shadow: 2px 2px 5px #ffdac0;
}
.add-button .add-icon{
  font-size: 28px;
  margin-bottom: -5px;
}
.no-more{
  color: #aaa;
  font-size: small;
  text-align: center;
  padding: 5px 0;
}

.search .sinput{
  height: 35px;
  width: 500rpx;
  border-radius: 20px;
  background-color: #fff;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: inline-block;
  font-size: 14px;
}
.search .cicon{
  position: absolute;
  right: 70rpx;
  top: 12px;
  font-size: 22px;
  z-index: 999;
}
.search .location{
  width: 200rpx;
  height: 35px;
  line-height: 35px;
  float: left;
  text-align: center;
  color: #fff;
}