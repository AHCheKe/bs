/* pages/pet/list.wxss */
.note-list{
  line-height: 28px;
  padding: 0 3%;
  color: #666;
  box-sizing: border-box;
}
.note-list .desc{
  margin-bottom: 6px;
}
.note-list .desc{
  margin-bottom: 6px;
  color: #666;
}
.item .remark{
  clear: both;
  margin: 4px 0;
  font-size: 12px;
  line-height: 20px;
  color: #888;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
}
.note-list .meta-data{
  display: inline-block;
  width: 54%;
  padding-left: 4px;
  box-sizing: border-box;
}
.pet-title .ptitle{
  padding-left: 5px;
}
.note-list .item{
  border-bottom: 1px solid #e2e2e2;
  padding: 12px 0;
  height: 100px;
}
.note-list .item .tags{
  margin-bottom: 5px;
}
.note-list .item .desc{
  font-size: 14px;
}
.ccc-txt{color:#ccc;}
.tags .file-cnt{
  float: right;
  font-size: 14px;
}
.auth-view .nickname{
  padding-right: 8px;
  font-size: 16px;
  color: #666;
  margin-bottom: 4px;
}
.auth-view .location{
  color: #5c9dba;
  font-size: 12px;
}
.auth-view .location .van-icon{
  font-size: 14px;
}
.item .ptime{
  font-size: 12px;
  color: #88C9A0;
  padding-right: 6px;
  float: right;
}
.right .type van-tag{
  margin-right: 6px;
}
.auth-view .profile{
  display: inline-block;
  height: 60px;
  width: 60px;
  margin-right: 10px;
  background-color: #88C9A0;
  /* border:1px solid #88C9A0;
  border-radius: 5px; */
}
.auth-view .profile image{
  height: 100%;
  width: 100%;
  border-radius: 5px;
}
.auth-view .right{
  display: inline-block;
  vertical-align: top;
  line-height: 18px;
}
.tags .van-tag{
  margin-right: 6px;
}
.item .citem .img{
  display: inline-block;
  width: 50%;
  text-align: right;
  box-sizing: border-box;
  font-size: 22px;
  color: #fd715e;
}
.item .tags{
  margin-bottom: 8px;
}
.right-block{
  width: 350rpx;
  display: inline-block;
  vertical-align: top;
}
.right .rate{
  margin: 4px 0;
  font-size: 14px;
}