/* pages/pet/list.wxss */
.note-list{
  line-height: 28px;
  padding: 0 20rpx;
  color: #666;
  box-sizing: border-box;
}
.note-list .desc{
  margin-bottom: 6px;
}
.note-list .desc{
  margin-bottom: 6px;
  color: #666;
}
.item .remark{
  clear: both;
  margin-bottom: 4px;
  font-size: 13px;
  line-height: 22px;
  color: #888;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.note-list .meta-data{
  display: inline-block;
  width: 54%;
  padding-left: 4px;
  box-sizing: border-box;
}
.note-list .item{
  border-bottom: 1px solid #e2e2e2;
  box-shadow: 2px 2px 8px rgba(136, 123, 255,0.6);
  border-radius: 5x;
  margin: 20px 0;
  overflow: hidden;
  padding: 8px 10rpx;
}

.note-list .item .tags{
  margin-bottom: 5px;
}
.note-list .item .desc{
  font-size: 14px;
}
.note-list .tags .tag-item{
  display: inline-block;
  margin-right: 8px;
  height: 20px;
  line-height: 20px;
  border-radius: 10px;
  color: #fff;
  background-color: #999;
  padding: 0 8px;
  font-size: 14px;
}
.tags .file-cnt{
  float: right;
  font-size: 14px;
}
.auth-view .nickname{
  color: #fd715e;
  padding-right: 8px;
  font-size: 14px;
}
.auth-view .ptime{
  font-size: 14px;
  color: #888;
  padding-left: 6px;
}
.auth-view .profile{
  display: inline-block;
  height: 55px;
  width: 55px;
  padding: 2px;
}
.auth-view .profile image{
  height: 50px;
  width: 50px;
  border-radius: 25px;
}
.auth-view .right{
  vertical-align: top;
  padding-left: 8px;
}
.auth-view .location{
  font-size: 12px;
}
.auth-view .location .van-icon{
  font-size: 14px;
}
.auth-view .distance{
  font-size: 12px;
  color: #d98481;
  float: right;
  padding-right: 3%;
}
.item .name-title{
  font-size: 16px;
  /* color: #fd715e; */
}
.tags .van-tag{
  margin-right: 6px;
}

.item .stime{
  padding-left: 8px;
  font-size: 14px;
  font-weight: bold;
}
.item .price{
  float: right;
  padding-right: 10rpx;
  font-size: 14px;
  color: #888;
}
.price .amount{
  color: #fd715e;
  font-size: 16px;
  font-weight: bold;
}
.item .pickup{
  font-size: 14px;
  color: #666;
  float: right;
  padding-right: 4px;
}
.pickup .need{
  color: #36b5bb;
}
.main-view{
  padding-bottom: 10vh;
}