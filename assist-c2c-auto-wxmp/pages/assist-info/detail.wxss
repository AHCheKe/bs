.btns{
  margin: 30px 0;
  text-align: center;
}
.book-detail{
  background-color: #fafafb;
  padding: 15px 2% 5vh 2%;
  font-size: small;
  color: #666;
  font-size: 14px;
}
.block{
  background-color: #fff;
  margin: 0 3%;
  padding-bottom: 15px;
}
.block .p{
  font-size: 14px;
  padding: 10px 0;
  text-align: center;
}
.block .item .time{
  font-size: 16px;
  font-weight: bold;
}
.item .hospital{
  font-size: 16px;
}
.pck .pck{
  font-weight: bold;
}
.block .item .price{
  color: #fd715e;
  font-weight: bold;
  font-size: 16px;
}
.p .msg{
  color: #52ae89;
  font-size: 22px;
}
.block .item{
  width: 100%;
  box-sizing: border-box;
  line-height: 35px;
  padding: 0 15px;
}
.block2{
  border-top: 1px solid #eee;
  padding-top: 15px;
}
.item .meta{
  float: left;
  width: 35%;
  color: #999;
}
.item .value{
  display: inline-block;
  width: 65%;
  color: #666;
  text-align: right;
  line-height: 22px;
}
.item .remark{
  padding-top: 5px;
  display: inline-block;
  width: 65%;
  color: #666;
  text-align: justify;
  line-height: 22px;
}
.tips{
  margin: 12px 3%;
  background-color: #fff;
  padding: 20px 2%;
  box-sizing: border-box;
  clear: both;
}
.tips .content{
  font-size: 14px;
}
.content .p{
  margin-bottom: 8px;
  line-height: 22px;
}
.tips .title{
  margin-bottom: 12px;
  color: #fd715e;
}
.van-cell__value{
  font-size: small;
}