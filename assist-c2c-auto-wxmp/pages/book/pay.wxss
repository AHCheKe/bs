.select-view{
  margin-top: 40%;
}
.user-file{
  font-size: 16px;
  padding: 0 2%;
}
.val-input{
  margin-bottom: 15px;
}
.val-input .label .desc{
  font-weight: normal;
  font-size: 14px;
  color: #999;
  padding-left: 10px;
}
.user-file .label{
  color: #666;
  padding: 8px 0;
  font-weight: bold;
  font-size: 16px;
}
.user-file input, .user-file textarea, .picker{
  width: 100%;
  box-sizing: border-box;
  padding: 5px 2%;
  border: 1px solid #fd715e;
}
.category-txt{
  color: #fd715e;
  font-size: 18px;
}
.user-file textarea{height: 150px;}
.user-file input{height: 35px;}
.user-file .orange-btn{
  margin-top: 15px;
}
.bottom-btn{
  text-align: center;
  position: fixed;
  bottom: 10vh;
  left: 0;
  right: 0;
}
.rent-price{
  color: #d98481;
  font-size: 18px;
}
.rent-month{
  color: #7892b5;
}
.pay-pop{
  width: 500rpx;
  padding: 20px 50rpx;
  border-radius: 10rpx;
}
.pay-bold{
  text-align: center;
  padding: 35px 0;
}
.pay-bold .dolar{
  font-size: 18px;
}
.pay-bold .money{
  font-size: 28px;
}
.pay-btns{
  text-align: center;
}