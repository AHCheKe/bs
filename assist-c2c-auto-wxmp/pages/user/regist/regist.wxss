/* pages/capsule/capsule-publish.wxss *//* miniprogram/pages/select_role/role.wxss */
.select-view{
  margin-top: 40%;
}
.user-file{
  font-size: 14px;
  background-color: #efefef;
}
.val-input{
  margin-bottom: 10px;
  background-color: #fff;
  padding: 5px 15px 10px 15px;
  color: #333;
}
.val-input .label .desc{
  font-weight: normal;
  font-size: 13px;
  color: #888;
  padding-left: 10px;
}
.user-file .label{
  color: #666;
  padding-top: 8px;
  font-weight: bold;
  font-size: 14px;
}
.val-input input, .val-input picker{
  border: 1px #ccc solid;
  height: 30px;
  line-height: 30px;
  font: 16px;
  padding: 2px 8px;
}
.val-input{
  padding: 10px 10px 5px 10px;
}
.val-input .meta{
  padding-bottom: 4px;
}
.user-file textarea{
  border: 1px solid #ccc;
  width: 100%;
  box-sizing: border-box;
}
.user-file textarea{
  height: 120px; 
  padding: 5px;
  margin-top: 5px;
}
.user-file input{height: 35px;}
.user-file .orange-btn{
  margin-top: 15px;
}
.bottom-btn{
  text-align: center;
  padding-bottom: 8vh;
}
.fb-btn{
  display: inline-block;
  height: 40px;
  line-height: 40px;
  background: #5c9dba;
  color: #fff;
  width: 120px;
  text-align: center;
  border-radius: 17px;
}
.input-btn-lin{
  position: relative;
}
.cdate{
  padding-top: 10px;
}
.val-input .tip{
  padding-top: 5px;
  color: #666;
  font-size: 14px;
}
.tip .head{
  font-weight: bold;
  padding-top: 4px;
}
.my-tags{
  margin-top: 5px;
}
.my-tags van-tag{
  margin-right: 10px;
}
.val-input .checkbox{
  padding-right: 12px;
  line-height: 35px;
  height: 35px;
}
.red-dot{
  color: #fd715e;
}
.img-list{
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-between; */
  padding: 10px 0;
}
.upload-img{
  width: 31%;
  height: 90px;
  text-align: center;
  margin-bottom: 10px;
  position: relative;
  padding: 0 1%;
}
.upload-img .pic{
  width: 100%;
  height: 90px;
}
.camera-icon{
  width:70px;
  height:80px;
}
.upload-img .del-btn{
  position: absolute;
  right: 2px;
  top: 2px;
  width: 20px;
  height: 20px;
  padding: 4px;
}
.val-location{
  height: 35px;
  border: 1px solid #ccc;
  line-height: 35px;
  padding: 0 6px;
}
.btns{
  margin-top: 25px;
  padding-bottom: 10vh;
  text-align: center;
}